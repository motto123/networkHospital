<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.usermanager.LoginActivity" >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_user_logo" />

            <RelativeLayout
                android:id="@+id/rlytTel"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/ivName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_enter" >

                <ImageView
                    android:id="@+id/ivTel"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_phone_no" />

                <EditText
                    android:id="@+id/etTel"
                    android:layout_width="204dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/ivTel"
                    android:background="#ffffff"
                    android:hint="@string/tel"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlytPassword"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/rlytTel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_login_enter"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivPassword"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_pwd" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="204dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/ivPassword"
                    android:background="#ffffff"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/password"
                    android:maxLength="20"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="13sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btNext"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/rlytPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_login"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tvRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rlytPassword"
                android:layout_below="@+id/rlytPassword"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:text="@string/registration"
                android:textColor="#74bfe6"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rlytPassword"
                android:layout_below="@+id/rlytPassword"
                android:layout_marginTop="23dp"
                android:background="@null"
                android:text="@string/forget"
                android:textColor="#74bfe6"
                android:textSize="15sp" />

        </RelativeLayout>

</RelativeLayout>