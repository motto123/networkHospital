<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.main.doctor_visit.activity.LookOverActivity" >

    <RelativeLayout
        android:id="@+id/rl_macke_details_top"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74BFE6" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_make_details"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imbt_macke_details_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_macke_details_name"
        android:layout_width="290dp"
        android:layout_height="115dp"
        android:layout_below="@id/rl_macke_details_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:paddingTop="10dp"
        android:paddingLeft="9dp"
        android:background="@drawable/bg_gray_circle"
        />

    <TextView
        android:id="@+id/tv_macke_details_address"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_macke_details_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_circle"
        android:gravity="center"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_macke_details_phone"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_macke_details_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_circle"
        android:gravity="center"
        android:text="@string/tv_dv_subsucceed_phone"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_macke_details_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/tv_macke_details_money"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_white_circle"
            android:gravity="left|center_vertical"
        android:paddingLeft="12dp"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@id/tv_dv_payment_money"
            android:layout_marginLeft="230dp"
            android:background="#ffa954" />

        <Button
            android:id="@+id/bt_macke_details_pay"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@id/tv_macke_details_money"
            android:layout_alignBottom="@id/tv_macke_details_money"
            android:layout_alignRight="@id/tv_macke_details_money"
            android:background="@drawable/bg_orange_circle"
            android:text="@string/bt_dv_payment_pay"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>