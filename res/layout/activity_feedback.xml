<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.more.FeedbackActivity" >

    <RelativeLayout
        android:id="@+id/rlytTitle"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74bfe6" >

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvFeedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlytTitle"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/feedback"
        android:textColor="#3b3b3b"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rlytCentext"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/tvFeedBack"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_white_gray_straight" >

        <TextView
            android:id="@+id/tvCentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="62dp"
            android:text="@string/centext"
            android:textColor="#3b3b3b"
            android:textSize="14sp" />
        <TextView 
            android:id="@+id/tvEmail"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="62dp"
            android:layout_below="@+id/tvCentext"
            android:text="@string/email"
            android:textColor="#3b3b3b"
            android:textSize="14sp"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/etCentext"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tvCentext"
            android:gravity="top"
            android:background="@drawable/bg_gray_gray_straight_thin"
            android:textColor="#3b3b3b"
            android:textSize="12sp" >
        </EditText>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/tvEmail"
            android:layout_toRightOf="@+id/tvEmail"
            android:background="@drawable/bg_gray_gray_straight_thin"
            android:textColor="#3b3b3b"
            android:textSize="12sp" 
            android:visibility="gone"/>
            
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rlytButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rlytCentext"
        android:layout_centerHorizontal="true"
        >
        <Button 
        android:id="@+id/btCancel"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_blue_circle_shallow"
        android:text="@string/cancel"        
        android:textColor="#ffffff"
        android:textSize="14sp"
        />
        <Button 
        android:id="@+id/btsend"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btCancel"
        android:background="@drawable/bg_blue_circle"
        android:text="@string/send"        
        android:textColor="#ffffff"
        android:textSize="14sp"
        />
    </RelativeLayout>
</RelativeLayout>
