<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray_straight"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Platform_View_item_on_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp"
        android:textSize="12sp"
        android:text="地点：双流县XX按季度" />

    <TextView
        android:id="@+id/Platform_View_item_on_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/Platform_View_item_on_tv1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="1dp"
        android:textSize="12sp"
        android:text="参与人数:22人" />

    <TextView
        android:id="@+id/Platform_View_item_on_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/Platform_View_item_on_tv2"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:text="发起日期：2015-08-26" 
        android:textColor="#7d7d7d"/>
    <TextView android:id="@+id/tvReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:text="@string/reason"
        android:visibility="gone"
        android:layout_below="@+id/Platform_View_item_on_tv3"/>

    <TextView
        android:id="@+id/Platform_View_item_on_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="审核中"
        android:layout_marginRight="20dp"
        android:textSize="12sp" />

</RelativeLayout>