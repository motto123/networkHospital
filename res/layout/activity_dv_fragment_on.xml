<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huiyuan.networkhospital.module.main.doctor_visit.fragment.Dv_fragment_on" >

    <TextView
        android:id="@+id/tv_doctor_visit_on"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#f7f7f7"
        android:gravity="center"
        android:text="@string/tv_doctor_visit"
        android:textSize="15sp" />

    <com.huiyuan.networkhospital.common.widget.XListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_doctor_visit_on"
        android:background="#f7f7f7"
        android:divider="#f7f7f7"
        android:dividerHeight="10dp"
        android:footerDividersEnabled="false"
        android:listSelector="@android:color/transparent" />

</RelativeLayout>