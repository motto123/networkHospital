<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.usermanager.RegisterActivity" >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_user_logo" />

            <RelativeLayout
                android:id="@+id/rlytSet"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/ivName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_enter"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivSet"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_pwd" />

                <EditText
                    android:id="@+id/etSet"
                    android:layout_width="204dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/ivSet"
                    android:background="#ffffff"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/setPassword"
                    android:maxLength="20"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlytAffirmance"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/rlytSet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_login_enter"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivAffirmance"
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_pwd" />

                <EditText
                    android:id="@+id/etAffirmance"
                    android:layout_width="204dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/ivAffirmance"
                    android:background="#ffffff"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/confirmPassword"
                    android:maxLength="20"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlytRegulation"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rlytAffirmance"
                android:layout_below="@id/rlytAffirmance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvRegulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/clickOk"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btRegulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tvRegulation"
                    android:background="#ffffff"
                    android:text="@string/servicesOrdinance"
                    android:textColor="#ff0000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btRegistration"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/rlytRegulation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_login"
                android:text="@string/enrolment"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btBack"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/btRegistration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_back"
                android:text="@string/backLogin"
                android:textColor="#ffffff" />
        </RelativeLayout>

</RelativeLayout>