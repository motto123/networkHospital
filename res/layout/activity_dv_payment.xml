<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.main.doctor_visit.activity.LookOverActivity" >

    <RelativeLayout
        android:id="@+id/rl_dv_payment_top"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74BFE6" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_dv_patment"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imbt_dv_payment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dv_payment_top"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_below="@id/rl_dv_payment_top"
        android:layout_centerHorizontal="true"
        android:background="#f7f7f7"
        android:gravity="center"
        android:text="@string/tv_dv_payment_top"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_dv_payment_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="256dp" >

        <TextView
            android:id="@+id/tv_dv_payment_money"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_white_circle"
            android:gravity="left|center_vertical"
            android:text="@string/tv_dv_payment_money"
        android:paddingLeft="12dp"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@id/tv_dv_payment_money"
            android:layout_marginLeft="230dp"
            android:background="#ffa954" />

        <Button
            android:id="@+id/bt_dv_payment_pay"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@id/tv_dv_payment_money"
            android:layout_alignBottom="@id/tv_dv_payment_money"
            android:layout_alignRight="@id/tv_dv_payment_money"
            android:background="@drawable/bg_orange_circle"
            android:text="@string/bt_dv_payment_pay"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>