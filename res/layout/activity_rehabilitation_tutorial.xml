<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huiyuan.networkhospital.module.main.rehabilitation_tutorial.activity.RehabilitationTutorialActivity" >

    <RelativeLayout
        android:id="@+id/rlytRehabilitationTutorialTitle"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74bfe6" >

        <ImageButton
            android:id="@+id/ibtnRehabilitationTutorialTitleBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />

        <TextView
            android:id="@+id/tvRehabilitationTutorialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/rehabilitationTutorial"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

     <com.huiyuan.networkhospital.common.widget.XListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rlytRehabilitationTutorialTitle"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" 
        android:background="#f7f7f7" 
        android:listSelector="@android:color/transparent" 
        />

</RelativeLayout>