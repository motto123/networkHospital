<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_particpation_top"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74BFE6" >

        <TextView
            android:id="@+id/tv_particpation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_participation"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imbt_particpation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />
    </RelativeLayout>

    <EditText
        android:id="@+id/ed_particpation"
        android:layout_width="290dp"
        android:layout_height="150dp"
        android:layout_below="@id/rl_particpation_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_gray_circle"
        android:ems="10"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingLeft="9dp"
        android:text="@string/bt_make_activity_details"
        android:textSize="12sp" />

    <Button
        android:id="@+id/bt_particpation_join"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_below="@id/ed_particpation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_blue_circle"
        android:gravity="center"
        android:text="@string/bt_particpation_join"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>