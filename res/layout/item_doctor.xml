<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
         >

        <TextView
            android:id="@+id/张三"
            style="@style/norm_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ivMore1"
            android:text="@string/name" />

        <TextView
            android:id="@+id/tvName"
            style="@style/norm_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/张三"
            android:layout_toRightOf="@+id/张三"
            android:layout_marginLeft="10dp"
            android:text="李四" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_right_arrow34x60" />

        <com.huiyuan.networkhospital.common.roundhead.CircularImage
            android:id="@+id/ivMore1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/ic_head_base" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/张三"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivMore1"
            android:text="@string/level"
            android:textColor="#5e5e5e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv1"
            android:layout_alignBottom="@+id/tv1"
            android:layout_toRightOf="@+id/tv1"
            android:text="TextView"
            android:textColor="#5e5e5e"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>