<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.huiyuan.networkhospital.module.user.HospitalsDetailsActivity" >

    <RelativeLayout
        android:id="@+id/rl_message_details"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="#74bfe6" >

        <ImageButton
            android:id="@+id/imbt_message_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back22x40px" />

        <TextView
            android:id="@+id/tv_message_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/myDetail"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_message_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/hospitalDetail"
        android:textColor="#3b3b3b"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/sc_message_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="11dp"
        android:layout_below="@id/tv_message_details_title">

        <RelativeLayout
            android:id="@+id/rl_message_details_sc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/img_message_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/test_ic_course_img" />

            <TextView
                android:id="@+id/tv_message_details_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_message_details"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/tvTutorialTextContents"
                android:textColor="#3b3b3b"
                android:textSize="10sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>